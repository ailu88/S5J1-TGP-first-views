<html>
  <head>
    <title>Contact</title>
  <body> 
  	<p> Welcome sur la page de l'auteur <%= @user.first_name%> <%= @user.last_name%> !</p> 
  	<p>Voici les infos sur cet auteur :</p>

  	<table class="table">
  <thead>
    <tr>
      <th scope="row">#</th>
      <th scope="row">First Name</th>
      <th scope="row">Last Name</th>
      <th scope="row">Description</th>
      <th scope="row">Email</th>
      <th scope="row">Age</th>
      <th scope="row">City</th>
    </tr>
  </thead>

  <tbody>

    <tr>
      <th scope="col"> # </th>
      <td> <%= @user.first_name %> </td>
      <td> <%= @user.last_name %> </td>
      <td> <%= @user.description %> </td>
      <td> <%= @user.email %> </td>
      <td> <%= @user.age %> </td>
      <td> <%= @user.city.name %> </td>
    </tr>

  </tbody>

</table>

<p> <%= link_to "Read more about the city", city_path(@user.city) %> </p> 

</body>
</html>