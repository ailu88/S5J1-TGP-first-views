  </tbody>

</table>

  <p> <%= link_to "Read more about the author", user_path(@gossip.user.id) %> </p> 
  <p> <%= link_to "Read more about the city", city_path(@gossip.user.city) %> </p> 

  <% if current_user %>      

    <p> <%= link_to "Edit this gossip", edit_gossip_path %> </p> 
    <p> <%= link_to 'Delete this gossip', gossip_path(@gossip), method: :delete, data: { confirm: 'Are you sure?' } %></p> 

  <% else %>

  <% end %>





  <h3>Comments (<%= @gossip.comments.size %>)</h3>

  <%= render partial: 'gossips/comment', collection: @gossip.comments.reverse %>

  <%= render partial: 'gossips/form' %>

</body>

</html>